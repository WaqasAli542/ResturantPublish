@{
    ViewBag.Title = "UpdateSpecialOffer";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}
    @model List<Resturant.Models.SpecialOffer>
    @using Resturant.Models;
    <div class="row" style="margin-top:10%;">
        <div class="col-md-offset-2 col-md-6">
            <div class="box box-primary col-md-10">
                <div class="box-body">
                    <h3 class="box-title">Add SpecialOffer</h3>
                    @{ 
                        SpecialOffer specialofr = ViewBag.SpecialOffer;
                    <form role="form" method="post" action="../AdminFood/UpdateSpecialOffer" enctype="multipart/form-data">
                        <!-- text input -->
                        <div class="form-group">
                            @Html.Hidden("Id",specialofr.Id)
                            @Html.Hidden("Image", specialofr.Image)
                            @Html.TextBoxFor((m => m.FirstOrDefault(o => o.Id == specialofr.Id).StartingDate), "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                           
                        </div>
                        <div class="form-group">

                            @Html.TextBoxFor((m => m.FirstOrDefault(o => o.Id == specialofr.Id).EndingDate), "{0:yyyy-MM-dd}", new { @class = "form-control", type = "date" })
                        </div>
                       
                        <div class="form-group">

                            <input type="text" class="form-control" name="Price" value="@specialofr.Price">
                        </div>
                        <div class="form-group">
                            <input type="time" class="form-control" name="StartingTime" placeholder="Enter the Starting date">

                        </div>
                        <div class="form-group">
                            <input type="time" class="form-control" name="EndingTime" placeholder="Enter the Ending date">
                        </div>
                        <div class="form-group">

                            <input type="text" class="form-control" name="Name" value=@specialofr.Name>
                        </div>
                        <div class="form-group">
                            <input type="text" class="form-control" name="Description" value="@specialofr.Description">
                        </div>

                        <input type="file" name="file" />

                        <label>
                            <input type="checkbox" name="ImgBox"> Remove Image
                        </label>
                      


                        <div class="box-footer">
                            <button type="submit" class="btn btn-default">Cancel</button>
                            <button type="submit" class="btn btn-primary pull-right">Add</button>
                        </div>


                        <!-- radio -->
                        <!-- select -->
                        <!-- Select multiple-->
                    </form>
                        }
                </div>
              
            </div>
        </div>
    </div>

  


